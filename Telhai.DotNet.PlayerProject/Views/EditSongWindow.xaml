<Window x:Class="Telhai.DotNet.DianaBistrik.PlayerProject.Views.EditSongWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Telhai.DotNet.DianaBistrik.PlayerProject.ViewModels"
        mc:Ignorable="d"
        Title="EditSongWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Left: Cover -->
        <StackPanel Grid.Column="0" Margin="0,0,10,0">
            <TextBlock Text="Cover" FontWeight="Bold" Margin="0,0,0,6"/>
            <Border BorderBrush="Gray" BorderThickness="1" Padding="6">
                <Image Source="{Binding CoverImage}" Height="220" Stretch="Uniform"/>
            </Border>
        </StackPanel>

        <!-- Right: edit + images -->
        <StackPanel Grid.Column="1">
            <TextBlock Text="Song Title" FontWeight="Bold"/>
            <TextBox Text="{Binding EditedTitle, UpdateSourceTrigger=PropertyChanged}" Margin="0,6,0,10"/>

            <TextBlock Text="Images (per song)" FontWeight="Bold"/>
            <Grid Margin="0,6,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ListBox ItemsSource="{Binding ImagePaths}"
                         SelectedItem="{Binding SelectedImagePath}"
                         Height="180"/>

                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <Button Content="Add" Command="{Binding AddImageCommand}" Margin="0,0,0,6"/>
                    <Button Content="Remove" Command="{Binding RemoveImageCommand}"/>
                </StackPanel>
            </Grid>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                <Button Content="Save" Click="Save_Click" Width="90" Margin="0,0,8,0"/>
                <Button Content="Cancel" Click="Cancel_Click" Width="90"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
